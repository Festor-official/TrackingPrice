<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content" android:layout_margin="8dp"
                                                   android:background="#FFFFFF" android:elevation="8dp">


    <ImageView
            android:id="@+id/product_image"
            android:layout_width="120dp"
            android:layout_height="120dp" android:background="#9AE1B3" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="Crazy good protein"
            app:layout_constraintStart_toEndOf="@+id/product_image" android:textStyle="bold"
            android:textColor="#000000" android:textSize="20sp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="4dp" android:singleLine="true"/>

    <TextView
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="2999P"
            app:layout_constraintStart_toStartOf="@+id/product_name"
            app:layout_constraintTop_toBottomOf="@+id/product_name" android:textStyle="bold"
            android:textColor="#000000" android:textSize="20sp" android:layout_marginLeft="4dp"/>

    <TextView
            android:id="@+id/product_price_trend"
            android:text="(300P)"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintStart_toEndOf="@+id/product_price"
            app:layout_constraintTop_toBottomOf="@+id/product_name" android:layout_marginLeft="4dp"/>

    <TextView
            android:id="@+id/last_checked_time"
            android:text="Last updated: 26.11.20 14:53"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>